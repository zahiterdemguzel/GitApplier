{
  "name": "git-apply-from-clipboard",
  "displayName": "Git Apply from Clipboard",
  "description": "Adds buttons to apply git patches from clipboard or reset hard, using Git Bash.",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/zahiterdemguzel/GitApplier.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitApplyFromClipboard.run",
        "title": "Git: Apply from Clipboard"
      },
      {
        "command": "gitApplyFromClipboard.resetHard",
        "title": "Git: Reset --hard"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Git Apply From Clipboard",
      "properties": {
        "gitApplyFromClipboard.gitBashPath": {
          "type": "string",
          "default": "C:\\Program Files\\Git\\bin\\bash.exe",
          "description": "Path to Git Bash executable on Windows."
        },
        "gitApplyFromClipboard.autoResetOnApply": {
          "type": "boolean",
          "default": false,
          "description": "Automatically run `git reset --hard` before applying patches from the clipboard."
        },
        "gitApplyFromClipboard.showResetButton": {
          "type": "boolean",
          "default": true,
          "description": "Show the 'Reset (Hard)' status bar button."
        }
      }
    }
  },
  "scripts": {
    "test": "echo 'No tests specified'"
  }
}