{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile package",
      "type": "shell",
      "command": "vsce package",
      "osx": {
        "command": "npx vsce package"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Install extension",
      "type": "process",
      "command": "code",
      "args": [
        "--install-extension",
        "${workspaceFolder}/git-apply-from-clipboard-1.0.0.vsix",
        "--force"
      ],
      "osx": {
        "command": "/Applications/Visual Studio Code.app/Contents/Resources/app/bin/code"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Test extensions",
      "type": "shell",
      "command": "code --command 'workbench.action.restartExtensionHost'",
      "problemMatcher": [],
      "group": {
        "kind": "none"
      }
    },
    {
      "label": "Uninstall extension",
      "type": "shell",
      "command": "code --uninstall-extension undefined_publisher.git-apply-from-clipboard",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}